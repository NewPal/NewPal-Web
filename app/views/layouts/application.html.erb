    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js"></script> 
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-resource.min.js"></script> 


<script>
(function() {
  var myAPI = "http://www.entourcity.com/newpal/api/messages";
    var str = '';
  $.getJSON( myAPI, {

    tagmode: "any",
    format: "json"
  })
    .done(function( data ) {
      debugger
      $.each( data, function( i, value ) {
        var new_li = $('<li>')
        new_li.text(value.Body + ' ' + value.City + ' ' + value.PhoneNumber)
        $('.navList').append(new_li);
      });
    });
})();
</script>
  	
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "New Pal", 'root', id: "logo" %>
          <nav>
            <ul class="nav pull-right">
              <li><%= link_to "MAP",    '#' %></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div ng-view>
      <div class="container" ng-app="NewpalWeb" ng-controller="AlertCtrl">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
